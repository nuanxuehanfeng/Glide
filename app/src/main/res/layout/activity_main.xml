<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  android:orientation="vertical"
    tools:context="com.baidu.glide.MainActivity">

    <Button
        android:id="@+id/activity_main_btn_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1" />
    <Button
        android:id="@+id/activity_main_btn_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2" />
    <Button
        android:id="@+id/activity_main_btn_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3" />
    <Button
        android:id="@+id/activity_main_btn_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4" />
    <com.baidu.glide.view.MyImageView
    android:layout_width="300dp"
    android:layout_height="300dp"
    android:id="@+id/activity_main_iv_1"
    />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/activity_main_iv_2"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/activity_main_iv_3"
        />
</LinearLayout>
